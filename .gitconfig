[init]
  templatedir = ~/git/config/template
[alias]
  # List commits showing changed files
  l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  # Show history of a file
  lf = log -u
  # View the current working tree status using the short format
  s = status -s
  # Diff
  d = diff --patch-with-stat
  do = difftool -t opendiff -y
  # Pull in remote changes for the current repository and all its submodules
  p = pull
  # Commit all
  ca = !git add -A && git commit -v -m
  # Commit existing
  ce = !git add -u && git commit -v -m
  # Checkout
  co = checkout
  cm = checkout master
  # Add interactive
  a = add -i
  # Branch
  b = branch
  # Reset unstaged changes
  r = checkout -- .
  # Reset hard
  rh = reset --hard
[push]
  default = current
